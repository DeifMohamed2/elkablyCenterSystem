<!DOCTYPE html>
<html lang="ar" dir="rtl">

    <%- include("./partials/head.ejs") %>
<style>
.spinner {
   width: 56px;
   height: 56px;
   display: grid;
   border: 4.5px solid #0000;
   border-radius: 50%;
   border-color: #dbdcef #0000;
   animation: spinner-e04l1k 1s infinite linear;
}

.spinner::before,
.spinner::after {
   content: "";
   grid-area: 1/1;
   margin: 2.2px;
   border: inherit;
   border-radius: 50%;
}

.spinner::before {
   border-color: #ff9847 #0000;
   animation: inherit;
   animation-duration: 0.5s;
   animation-direction: reverse;
}

.spinner::after {
   margin: 8.9px;
}

#studentTable th, #studentTable td {
  text-align: center;
  color: black !important;
}

hr {
  border-top: 1px solid #000;
  border: 1px solid #000; 
  margin-top: 10px;
  margin-bottom: 0;
}

.details-btn {
  background-color: #17a2b8 !important;
  color: white !important;
  border: 1px solid transparent !important;
  padding: 5px 10px !important;
  border-radius: 5px !important;
  cursor: pointer !important;
  transition: all ease 0.3s !important;
}

.details-btn:hover {
  scale: 1.07;
  color: #17a2b8 !important;
  background-color: white !important;
  padding: 5px 10px !important;
  border: 1px solid #17a2b8 !important;
}

.table-responsive {
  max-height: 500px;
  overflow: auto;
}

.message {
  opacity: 0.7;
  font-size: 1.2rem;
  font-weight: bold;
  color: #F44335;
}

.session-info-card {
  background: #ffffff;
  color: #000000;
  border: 2px solid #000000;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.session-info-card h5 {
  color: #000000;
  margin-bottom: 15px;
  font-weight: bold;
  border-bottom: 2px solid #000000;
  padding-bottom: 10px;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  padding: 8px 0;
  border-bottom: 1px solid #e0e0e0;
}

.info-label {
  font-weight: bold;
  color: #000000;
}

.info-value {
  color: #000000;
  font-weight: 500;
}

@keyframes spinner-e04l1k {
   100% {
      transform: rotate(1turn);
   }
}
</style>

<body class="g-sidenav-show rtl  bg-gray-100">
    <%- include("./partials/aside.ejs") %>

    <!-- Main content -->
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
   
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
      <div class="container-fluid pt-1 px-3">
        <div class="d-flex justify-content-between align-items-center">
          <h4>Attendance Session Details</h4>
          <button class="btn btn-outline-secondary" onclick="history.back()">
            <i class="material-symbols-rounded">arrow_back</i> Back
          </button>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    
    <div class="container-fluid py-2">
      
      <!-- Filter Form (shown when no specific attendance ID) -->
      <div class="row" id="filterSection" style="display: none;">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h5 class="mb-0">Filter Attendance Sessions</h5>
                </div>
                <div class="col-6 text-end">
                  <button type="button" class="btn bg-gradient-dark mb-0" id="searchBtn">
                    <i class="material-symbols-rounded text-sm">search</i>&nbsp;&nbsp;Search
                  </button>
                </div>
              </div>
            </div>
            <div class="card-body p-3">
              <div class="row">
                <div class="col-md-3">
                  <label for="filterStartDate" class="form-label">Start Date</label>
                  <input type="date" class="form-control border border-2 p-2" id="filterStartDate">
                </div>
                <div class="col-md-3">
                  <label for="filterEndDate" class="form-label">End Date</label>
                  <input type="date" class="form-control border border-2 p-2" id="filterEndDate">
                </div>
                <div class="col-md-3">
                  <label for="filterTeacher" class="form-label">Teacher</label>
                  <select class="form-control border border-2 p-2" id="filterTeacher">
                    <option value="">All Teachers</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <label for="filterStatus" class="form-label">Collection Status</label>
                  <select class="form-control border border-2 p-2" id="filterStatus">
                    <option value="">All Sessions</option>
                    <option value="false">Pending Collection</option>
                    <option value="true">Already Collected</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sessions List (shown when no specific attendance ID) -->
      <div class="row" id="sessionsListSection" style="display: none;">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0 p-3">
              <h5 class="mb-0">Attendance Sessions</h5>
            </div>
            <div class="card-body p-3">
              <div id="sessionsList" class="row">
                <!-- Sessions will be populated here -->
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Session Information Card -->
      <div class="row" id="sessionDetailsSection">
        <div class="col-12">
          <div class="session-info-card">
            <h5><i class="material-symbols-rounded me-2">info</i>Session Information</h5>
            <div class="row">
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Teacher:</span>
                  <span class="info-value" id="teacherName">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Course:</span>
                  <span class="info-value" id="courseName">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Date:</span>
                  <span class="info-value" id="sessionDate">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Status:</span>
                  <span class="info-value" id="collectionStatus">--</span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Total Students:</span>
                  <span class="info-value" id="totalStudents">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Total Amount:</span>
                  <span class="info-value" id="totalAmount">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Center Fees:</span>
                  <span class="info-value" id="centerFees">--</span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="info-row">
                  <span class="info-label">Employee:</span>
                  <span class="info-value" id="employeeName">--</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Students Table -->
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h5 class="mb-0">Students Attendance Details</h5>
                </div>
                <div class="col-6 text-end">
                  <button type="button" class="btn bg-gradient-success mb-0" id="downloadExcelBtn">
                    <i class="material-symbols-rounded text-sm">download</i>&nbsp;&nbsp;Download Excel
                  </button>
                </div>
              </div>
            </div>
            <hr>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="studentTable">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">#</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Student Name</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Student Code</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Phone Number</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Parent Phone</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Amount Paid</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Center Fees</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">Added By</th>
                    </tr>
                  </thead>
                  <tbody id="tBody">
                    <!-- Student rows will be populated here -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <!-- Invoices Table -->
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header pb-0 p-3">
              <h5 class="mb-0">Session Invoices</h5>
            </div>
            <hr>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="invoiceTable">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-8">Invoice Details</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-8">Amount</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-8">Time</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-8">Added By</th>
                    </tr>
                  </thead>
                  <tbody id="invoiceTBody">
                    <!-- Invoice rows will be populated here -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="spinner" class="spinner mx-auto d-none"></div>

    </div>
  </main>

  <!--   Core JS Files   -->
  <script src="/js/adminJS/attendanceDetails.js"></script>
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>

  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/material-dashboard.min.js?v=3.2.0"></script>
</body>

</html>
