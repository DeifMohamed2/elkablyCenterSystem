                          <% employees.forEach(employee => { %>
                            <option value="<%= employee._id %>"><%= employee.employeeName %></option>
                          <% }) %>
                        </select>
                      </div>


                    </div>
                  </div>
                  <div id="spinner" class="spinner mx-auto d-none"></div>

                </div>
