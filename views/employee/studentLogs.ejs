<!DOCTYPE html>
<html lang="ar" dir="rtl">

<%- include("./partials/head.ejs") %>
<style>
.spinner {
   width: 56px;
   height: 56px;
   display: grid;
   border: 4.5px solid #0000;
   border-radius: 50%;
   border-color: #dbdcef #0000;
   animation: spinner-e04l1k 1s infinite linear;
}

.spinner::before,
.spinner::after {
   content: "";
   grid-area: 1/1;
   margin: 2.2px;
   border: inherit;
   border-radius: 50%;
}

.spinner::before {
   border-color: #ff9847 #0000;
   animation: inherit;
   animation-duration: 0.5s;
   animation-direction: reverse;
}

.spinner::after {
   margin: 8.9px;
}
#studentTable th, #studentTable td {
  text-align: center;
  color: black !important;
}

hr {
  border-top: 1px solid #000;
  border: 1px solid #000; 
  margin-top: 10px;
  margin-bottom: 0;
}

.view-student-btn {
  background-color: #ff9847 !important; 
  color: white !important;
  border: 1px solid transparent !important;
  padding: 5px 10px !important;
  border-radius: 5px !important;
  cursor: pointer !important;
  transition: all ease 0.3s !important;
}

.view-student-btn:hover {
  scale: 1.07;
  color: #ff9847 !important;
  background-color: white !important;
  padding: 5px 10px !important;
  border: 1px solid #ff9847 !important;
}

.table-responsive {
  max-height: 500px;
  overflow: auto;
}

.message {
  opacity: 0.7;
  font-size: 1.2rem;
  font-weight: bold;
  color: #F44335;
}

.stats-card {
  transition: all 0.3s ease;
}

.stats-card:hover {
  transform: translateY(-5px);
}

@keyframes spinner-e04l1k {
   100% {
      transform: rotate(1turn);
   }
}

.table-loading {
  position: relative;
  min-height: 200px;
}

.table-loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.table-spinner {
  width: 40px;
  height: 40px;
  border: 3.5px solid #0000;
  border-radius: 50%;
  border-color: #dbdcef #0000;
  animation: spinner-e04l1k 1s infinite linear;
}

.table-spinner::before,
.table-spinner::after {
  content: "";
  grid-area: 1/1;
  margin: 2px;
  border: inherit;
  border-radius: 50%;
}

.table-spinner::before {
  border-color: #ff9847 #0000;
  animation: inherit;
  animation-duration: 0.5s;
  animation-direction: reverse;
}

.table-spinner::after {
  margin: 7px;
}
</style>

<body class="g-sidenav-show rtl bg-gray-100">
  <%- include("./partials/aside.ejs") %>

  <!-- Main content -->
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <%- include("./partials/nav.ejs") %>

    <!-- End Navbar -->
    <div class="container-fluid py-2">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h5 class="mb-0">سجلات الطلاب</h5>
                </div>
              </div>
              <form id="searchForm">
                <div class="row mt-3">
                  <div class="col-md-8">
                    <input type="text" class="form-control border border-2 p-2" id="searchInput" placeholder="بحث عن طالب (الاسم أو الكود)">
                  </div>
                  <div class="col-md-4 text-end">
                    <button type="submit" class="btn bg-gradient-dark mb-0" id="searchButton">
                      <i class="fas fa-search text-sm"></i>&nbsp;&nbsp;بحث
                    </button>
                  </div>
                  <div class="col-lg-1 col-sm-6">
                    <div id="spinner" class="spinner mx-auto d-none"></div>
                  </div>
                </div>
              </form>
              <h5 class="message" id="message"></h5>
            </div>
            <hr>
            <div class="card-body px-0 pb-2">
              <!-- Search Results Section -->
              <div class="table-responsive p-0" id="searchResults" style="display: none;">
                <table class="table align-items-center mb-0" id="studentTable">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">#</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">اسم الطالب</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">كود الطالب</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">رقم الهاتف</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">المدرسة</th>
                      <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7">عرض</th>
                    </tr>
                  </thead>
                  <tbody id="searchResultsBody">
                    <!-- Search results will be added here dynamically -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Student Details Section (Initially Hidden) -->
      <div id="studentDetails" style="display: none;">
        <!-- Student Info Card -->
        <div class="row">
          <div class="col-12">
            <div class="card my-4">
              <div class="card-header pb-0 p-3">
                <div class="row">
                  <div class="col-8 d-flex align-items-center">
                    <h5 class="mb-0" id="studentName">معلومات الطالب</h5>
                  </div>
                  <div class="col-4 text-end">
                    <button class="btn bg-gradient-dark mb-0" id="backToSearch">
                      <i class="fas fa-arrow-left text-sm"></i>&nbsp;&nbsp;العودة للبحث
                    </button>
                  </div>
                </div>
              </div>
              <hr>
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-md-6">
                    <p><strong>الكود:</strong> <span id="studentCode"></span></p>
                    <p><strong>رقم الهاتف:</strong> <span id="studentPhone"></span></p>
                    <p><strong>رقم ولي الأمر:</strong> <span id="parentPhone"></span></p>
                  </div>
                  <div class="col-md-6">
                    <p><strong>المدرسة:</strong> <span id="schoolName"></span></p>
                    <p><strong>نوع الدفع:</strong> <span id="paymentType"></span></p>
                    <p><strong>تاريخ التسجيل:</strong> <span id="registrationDate"></span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row">
          <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
            <div class="card stats-card">
              <div class="card-header d-flex justify-content-between p-3 pt-2">
                <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark text-center border-radius-lg">
                  <i class="fas fa-calendar-alt opacity-10"></i>
                </div>
                <div class="text-start pt-1">
                  <p class="text-sm mb-0 text-capitalize">عدد مرات الحضور</p>
                  <h4 class="mb-0" id="totalAttendance">0</h4>
                </div>
              </div>
              <hr class="dark horizontal my-0">
              <div class="card-footer p-3">
                <p class="mb-0">معدل الحضور <span class="text-success text-sm font-weight-bolder" id="attendanceRate">0%</span></p>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
            <div class="card stats-card">
              <div class="card-header d-flex justify-content-between p-3 pt-2">
                <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark text-center border-radius-lg">
                  <i class="fas fa-money-bill-wave opacity-10"></i>
                </div>
                <div class="text-start pt-1">
                  <p class="text-sm mb-0 text-capitalize">إجمالي المدفوعات</p>
                  <h4 class="mb-0" dir="ltr" id="totalPayments">0 ج.م</h4>
                </div>
              </div>
              <hr class="dark horizontal my-0">
              <div class="card-footer p-3">
                <p class="mb-0">المبلغ المتبقي <span class="text-danger text-sm font-weight-bolder" id="remainingAmount">0 ج.م</span></p>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
            <div class="card stats-card">
              <div class="card-header d-flex justify-content-between p-3 pt-2">
                <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark text-center border-radius-lg">
                  <i class="fas fa-book opacity-10"></i>
                </div>
                <div class="text-start pt-1">
                  <p class="text-sm mb-0 text-capitalize">عدد الكورسات</p>
                  <h4 class="mb-0" id="coursesCount">0</h4>
                </div>
              </div>
              <hr class="dark horizontal my-0">
              <div class="card-footer p-3">
                <p class="mb-0">كورسات نشطة <span class="text-success text-sm font-weight-bolder" id="activeCoursesCount">0</span></p>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
            <div class="card stats-card">
              <div class="card-header d-flex justify-content-between p-3 pt-2">
                <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark text-center border-radius-lg">
                  <i class="fas fa-users opacity-10"></i>
                </div>
                <div class="text-start pt-1">
                  <p class="text-sm mb-0 text-capitalize">عدد المعلمين</p>
                  <h4 class="mb-0" id="teachersCount">0</h4>
                </div>
              </div>
              <hr class="dark horizontal my-0">
              <div class="card-footer p-3">
                <p class="mb-0">المعلمين المسجل معهم الطالب</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Filters Section -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card my-4">
              <div class="card-header pb-0 p-3">
                <div class="row">
                  <div class="col-8 d-flex align-items-center">
                    <h5 class="mb-0">تصفية البيانات</h5>
                  </div>
                  <div class="col-4 text-end">
                    <button type="button" class="btn btn-sm bg-gradient-dark mb-0" id="toggleFilters">
                      <i class="fas fa-filter text-sm"></i>&nbsp;&nbsp;إظهار/إخفاء الفلاتر
                    </button>
                  </div>
                </div>
              </div>
              <hr>
              <div class="card-body p-3" id="filtersBody">
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>المعلم</label>
                      <select class="form-control border p-2" id="teacherFilter">
                        <option value="">جميع المعلمين</option>
                      </select>
                    </div>
                    <div class="form-check mt-2">
                      <input class="form-check-input" type="checkbox" id="timelineCheckbox">
                      <label class="form-check-label" for="timelineCheckbox">
                        عرض الجدول الزمني الكامل
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>الكورس</label>
                      <select class="form-control border p-2" id="courseFilter">
                        <option value="">جميع الكورسات</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>من تاريخ</label>
                      <input type="date" class="form-control border p-2" id="startDateFilter">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>إلى تاريخ</label>
                      <input type="date" class="form-control border p-2" id="endDateFilter">
                    </div>
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-md-12 text-center">
                    <button class="btn bg-gradient-dark" id="applyFilters">
                      <i class="fas fa-check text-sm"></i>&nbsp;&nbsp;تطبيق الفلاتر
                    </button>
                    <button class="btn bg-gradient-secondary" id="resetFilters">
                      <i class="fas fa-sync-alt text-sm"></i>&nbsp;&nbsp;إعادة تعيين
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Tabs for different data views -->
        <div class="row">
          <div class="col-12">
            <div class="card my-4">
              <div class="card-header pb-0 p-3">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="attendance-tab" data-bs-toggle="tab" data-bs-target="#attendance" type="button" role="tab" aria-controls="attendance" aria-selected="true">سجل الحضور</button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="courses-tab" data-bs-toggle="tab" data-bs-target="#courses" type="button" role="tab" aria-controls="courses" aria-selected="false">الكورسات المسجلة</button>
                  </li>
                </ul>
              </div>
              <hr>
              <div class="card-body px-0 pb-2">
                <div class="tab-content" id="myTabContent">
                  <!-- Attendance Records Tab -->
                  <div class="tab-pane fade show active" id="attendance" role="tabpanel" aria-labelledby="attendance-tab">
                    <div class="table-responsive p-0 table-loading">
                      <div class="table-loading-overlay" id="attendanceTableLoading" style="display: none;">
                        <div class="table-spinner"></div>
                        <p class="mt-2 text-dark">جاري تحميل البيانات...</p>
                      </div>
                      <table class="table align-items-center mb-0" id="attendanceTable">
                        <thead>
                          <tr>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">#</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">التاريخ</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">الكورس</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">المعلم</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">المبلغ المدفوع</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">تم التسجيل بواسطة</th>
                          </tr>
                        </thead>
                        <tbody id="attendanceTableBody">
                          <!-- Attendance records will be added here dynamically -->
                        </tbody>
                      </table>
                      <div class="alert alert-info text-center mt-3" role="alert" id="noAttendanceMessage" style="display: none;">
                        <i class="fas fa-info-circle me-2"></i>
                        لا توجد سجلات حضور للطالب
                      </div>
                    </div>
                  </div>
                  
                  <!-- Courses Tab -->
                  <div class="tab-pane fade" id="courses" role="tabpanel" aria-labelledby="courses-tab">
                    <div class="table-responsive p-0 table-loading">
                      <div class="table-loading-overlay" id="coursesTableLoading" style="display: none;">
                        <div class="table-spinner"></div>
                        <p class="mt-2 text-dark">جاري تحميل البيانات...</p>
                      </div>
                      <table class="table align-items-center mb-0" id="coursesTable">
                        <thead>
                          <tr>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">#</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">المعلم</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">الكورس</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">المبلغ المدفوع</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">المبلغ المتبقي</th>
                            <th class="text-center text-uppercase text-secondary text-m font-weight-bolder opacity-7 border-bottom">الحالة</th>
                          </tr>
                        </thead>
                        <tbody id="coursesTableBody">
                          <!-- Course records will be added here dynamically -->
                        </tbody>
                      </table>
                      <div class="alert alert-info text-center mt-3" role="alert" id="noCoursesMessage" style="display: none;">
                        <i class="fas fa-info-circle me-2"></i>
                        لا توجد كورسات مسجلة للطالب
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!--   Core JS Files   -->
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="../assets/js/material-dashboard.min.js"></script>
  <script src="../js/employeeJS/studentLogs.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
</body>
</html>